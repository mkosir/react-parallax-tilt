{
  "name": "react-parallax-tilt",
  "version": "0.0.0-development",
  "description": "Easily apply tilt hover effect on React components - lightweight/zero dependencies",
  "module": "./dist/index.esm.js",
  "main": "./dist/index.umd.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start": "npm run storybook",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "lint": "eslint --max-warnings 0 .",
    "lint-fix": "eslint --fix .",
    "lint-staged-husky": "lint-staged",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown './**/*'",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown './**/*'",
    "commit": "git-cz",
    "test": "jest --verbose --watch",
    "test:coverage": "jest --coverage --verbose",
    "test:coverage:watch": "jest --coverage --verbose --watch",
    "storybook": "start-storybook -p 9009",
    "storybook:build": "build-storybook",
    "semantic-release": "semantic-release",
    "generate-demos": "npx react-demo-tab-cli generate --prefix=_ && npm run format-fix && npm run lint-fix",
    "validate": "npm run lint && npm run build && npm run test:coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@storybook/addons": "^6.4.21",
    "@storybook/builder-webpack5": "^6.4.21",
    "@storybook/manager-webpack5": "^6.4.21",
    "@storybook/react": "^6.4.21",
    "@storybook/theming": "^6.4.21",
    "@types/enzyme": "^3.10.12",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/eslint": "^8.4.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.2",
    "@types/react-dom": "^18.0.0",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-array-reduce": "^1.0.52",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-config": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-joystick-component": "1.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "semantic-release": "^19.0.2",
    "sinon": "^13.0.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0 || ^17.0.0",
    "react-dom": "^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkosir/react-parallax-tilt.git"
  },
  "author": "Marko Kosir <kosir.mar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkosir/react-parallax-tilt/issues"
  },
  "homepage": "https://github.com/mkosir/react-parallax-tilt#readme",
  "keywords": [
    "react",
    "react-component",
    "react-tilt",
    "react-parallax-tilt",
    "parallax",
    "tilt",
    "glare",
    "transform",
    "rotate",
    "scale",
    "flip",
    "effect",
    "component",
    "gyroscope",
    "sensor",
    "mirror"
  ]
}
