{
  "name": "react-parallax-tilt",
  "version": "0.0.0-development",
  "description": "Easily apply tilt hover effect on React components - lightweight/zero dependencies",
  "module": "./dist/index.esm.js",
  "main": "./dist/index.umd.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start": "npm run storybook",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "lint": "eslint --max-warnings 0 --ext .js,jsx,ts,tsx src/ test/",
    "lint-staged-husky": "lint-staged",
    "lint-prettier": "prettier --config .prettierrc -l  './**/*.{ts,tsx,js,jsx,css,scss,json,md}'",
    "prettier": "prettier --config .prettierrc --write './**/*.{ts,tsx,js,jsx,css,scss,json,md}'",
    "test": "jest --verbose --watch",
    "commit": "git-cz",
    "test:coverage": "jest --coverage --verbose",
    "test:coverage:watch": "jest --coverage --verbose --watch",
    "storybook": "start-storybook -p 9009",
    "storybook:build": "build-storybook",
    "semantic-release": "semantic-release",
    "demotab": "demotab generate --prefix=_ && npm run prettier",
    "validate": "npm run lint && npm run build && npm run test:coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-typescript": "^8.2.3",
    "@storybook/addons": "^6.3.4",
    "@storybook/builder-webpack5": "^6.3.4",
    "@storybook/manager-webpack5": "^6.3.4",
    "@storybook/react": "^6.3.4",
    "@storybook/theming": "^6.3.4",
    "@types/enzyme": "^3.10.9",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "codecov": "^3.8.2",
    "commitizen": "^4.2.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-config": "^27.0.6",
    "jest-transform-css": "^2.1.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "react": "^16.8.6",
    "react-demo-tab": "^1.2.18",
    "react-demo-tab-cli": "^1.2.50",
    "react-dom": "^16.8.6",
    "react-joystick-component": "^1.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "semantic-release": "^17.4.4",
    "sinon": "^11.1.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0 || ^17.0.0",
    "react-dom": "^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "lint-staged": {
    "*": [
      "pretty-quick --staged"
    ],
    "{src,test}/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/test/.*|\\.)\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkosir/react-parallax-tilt.git"
  },
  "author": "Marko Kosir <kosir.mar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkosir/react-parallax-tilt/issues"
  },
  "homepage": "https://github.com/mkosir/react-parallax-tilt#readme",
  "keywords": [
    "react",
    "react-component",
    "react-tilt",
    "react-parallax-tilt",
    "parallax",
    "tilt",
    "glare",
    "transform",
    "rotate",
    "scale",
    "flip",
    "effect",
    "component",
    "gyroscope",
    "sensor",
    "mirror"
  ]
}
