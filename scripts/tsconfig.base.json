{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "../compiled",
    "paths": {
      "@/*": ["../src/*"]
    },
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "pretty": true,
    "sourceMap": false,
    "strict": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["vitest/globals"],
    "allowJs": true
  }
}
